@model Markmove.Models.DestinationViewModel

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="well">
        <h2>Create Destination</h2>
        @using (Html.BeginForm("Create", "Destination", FormMethod.Post, new {@class = "form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger"})

            <div class="form-group">
                @Html.LabelFor(m => m.Name, new {@class = "control-label col-sm-4"})
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description, new {@class = "control-label col-sm-4"})
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Description, new {@class = "form-control", @rows = "7"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Country, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control", @rows = "7" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CategoryId, new {@class = "col-sm-4 control-label"})
                <div class="dropdown col-sm-4">
                    @if (ViewBag.AvailableCategories == null)
                    {
                        <p>No categories</p>
                    }
                    else
                    {
                        @Html.DropDownListFor(m => m.CategoryId,
                        new SelectList(ViewBag.AvailableCategories, "Id", "Name"),
                        new { @class = "btn btn-info col-sm-12" })
                    }
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Tags, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Tags, new { @class = "form-control col-sm-4" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Index", "Destination", null, new { @class = "btn btn-default"})
                    <input type="submit" value="Create" class="btn btn-success"/>
                </div>
            </div>
        }
    </div>
</div>

