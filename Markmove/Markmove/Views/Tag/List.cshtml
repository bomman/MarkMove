@model List<Markmove.Models.Destination>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        @foreach (var destination in Model)
        {
            <div class="col-sm-6">
                <article>
                    <header>
                        <h2>
                            @Html.ActionLink(@destination.Name, "Details", "Destination", new { @id = destination.Id }, null)
                        </h2>
                    </header>
                    <p>
                        @destination.Description
                    </p>
                    <footer>
                        <div class="pull-left">
                            @foreach (var tag in destination.Tags)
                            {
                                @Html.ActionLink(tag.Name, "List", "Tag", new { @id = tag.Id }, new { @class = "btn btn-default btn-xs" })
                            }
                        </div>
                        <small class="author pull-right">
                            --country @destination.Country
                        </small>
                    </footer>

                </article>
            </div>
        }
    </div>
</div>
<hr />
